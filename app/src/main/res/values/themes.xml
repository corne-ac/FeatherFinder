<resources>
    <!-- Base application theme. -->
    <style name="Theme.FeatherFinder" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--        <item name="cardBackgroundOnCard">?attr/cardBackgroundOnCard</item>-->
        <!--        <item name="cardBackgroundColor">@color/cardBackgroundColorNight</item>-->
        <item name="cardBackgroundOnCard">@color/cardBackgroundColor</item>
        <item name="materialCardViewStyle">@style/MyCardViewStyle</item>


    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_card</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="Theme.FeatherFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FeatherFinder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>