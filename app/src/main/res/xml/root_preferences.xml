<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <PreferenceCategory app:title="@string/preference_header">

        <SwitchPreference
            android:defaultValue="true"
            android:key="metric_system"
            android:summary="Use the metric system"
            android:title="Metric System" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/metric_system_entries"
            android:entryValues="@array/metric_system_values"
            android:key="metric_system"
            android:summary="Choose the preferred system of units"
            android:title="Metric System"
            />
        <!--android:icon="@drawable/ic_system"-->
        <EditTextPreference
            android:defaultValue="100"
            android:dialogTitle="Enter a distance"
            android:inputType="number"
            android:key="max_distance"
            android:summary="Set the maximum distance"
            android:title="Maximum Distance" />
        <!--android:icon="@drawable/ic_distance"-->
    </PreferenceCategory>


</PreferenceScreen>